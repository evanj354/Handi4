<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eejohnsonscu.handi2.Work">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills you have:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="247dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:text="Strong"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="353dp" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:text="Intelligent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="316dp" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:text="Good in high temperatures"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="427dp" />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:text="Good attitude"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="279dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Where can you work?" />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox10"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:text="Paint well"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="390dp" />
</android.support.constraint.ConstraintLayout>
